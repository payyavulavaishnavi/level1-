    <script>
        document.querySelector('form').addEventListener('submit', function(event) {
            event.preventDefault();
            const answer = document.getElementById('riddle_answer').value.toLowerCase().trim();
            const clue = document.getElementById('result');
            if (answer === '556') {
                clue.textContent = 'The clue is 556!';
            } else {
                clue.textContent = 'Try again.';
            }
        });
